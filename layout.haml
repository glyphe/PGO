<!-- @reload -->

%html

  %head
    %title Galvano One
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    <link rel="stylesheet" type="text/css" href="//cloud.typography.com/6035872/766964/css/fonts.css" />
    <link rel="stylesheet/less" type="text/css" href="assets/css/bootstrap.less" />
    <!-- @stylesheet css/style -->
    <!-- @javascript less jquery-1.8.3.min jquery.sticky  -->
    <script>$(window).load(function(){$("#nav-categories").sticky({ topSpacing: 0 });});</script>


    

  %body

    %header
      #nav-main
        .container 
          %h1 Galvano One

          %nav
            %ul
              %li About Galvano One
              %li One Business

      #nav-categories
        .container
          %h2 Berlin

          %nav
            %ul
              %li.active Clubs & Bars
              %li Hotels
              %li Restaurants
              %li Cafés & Lounges
              %li Shops
              %li Services

    #main-content
      .container
        %h3 Berlin today

        .row
          .col-sm-6
            .event-box-feature

              .img-container
                <img src="assets/img/Foto-Bar.jpg">
                .event-title-feature
                  %p Berghain Berlin
                  %h4 Elektroakustischer Salon: Art’s Birthday 2014
                
              %p.benefit
                %span Member Benefit
                Free Entry until 23:00
          .col-sm-6
            .event-box-feature
              .img-container
                <img src="assets/img/Foto-Restaurant.jpg">
                .event-title-feature
                  %p Brooklyn Beef Club
                  %h4 Business Lunch
              %p.benefit 
                %span Member Benefit
                Free drink to the menu

        .row
          .col-sm-3
            .event-box
              <img src="assets/img/Foto-Shop.jpg">
              %p.event-category Six Seasons
              %h4.event-title Silver jewelry and textiles from Bangladesh
              <hr>
              %p.benefit
                %span Member Benefit
                20 % Discount

          .col-sm-3
            .event-box
              <img src="assets/img/Foto-Services.jpg">
              %p.event-category Jet Textilreinigung
              %h4.event-title Dry Cleaning
              <hr>
              %p.benefit
                %span Member Benefit
                The fifth shirt is free

          .col-sm-3
            .event-box
              <img src="assets/img/Foto-Hotel.png">
              %p.event-category Hotel Dolder Grand
              %h4.event-title 5 Stars Hotel with Spa and Wellness Berlin
              <hr>
              %p.benefit
                %span Member Benefit
                Free room upgrade
          .col-sm-3
            .event-box
              <img src="assets/img/Foto-Cafe.jpg">
              %p.event-category Xara Café Lounge Berlin Mitte
              %h4.event-title Best Cocktails in Town
              <hr>
              %p.benefit
                %span Member Benefit
                First house bill

    %footer
      .container
        %nav
          %ul
            %li About
            %li Carrer
            %li Labels
            %li Imprint
            %li Terms & Conditions
            %li Contact
            %li One Business Login


